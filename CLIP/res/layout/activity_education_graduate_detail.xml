<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">

	<LinearLayout
	    android:id="@+id/LinearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.example.clip.education.EducationGraduateDetail" >
	
	    <TextView
	        android:id="@+id/educationGraduate_detailName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	        android:text="@string/none"
	        android:textSize="28sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_detailAction"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="@string/none"
	        android:textSize="15sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_detailDegree"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="space"
	        android:textSize="15sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_detailPlan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="space"
	        android:textSize="15sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_labelLocation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:visibility="gone"
	        android:text="Location:"
	        android:textSize="17sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_detailLocation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:visibility="gone"
	        android:textSize="20sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_labelDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:visibility="gone"
	        android:text="Application due date:"
	        android:textSize="17sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_detailDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:visibility="gone"
	        android:textSize="20sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_labelOutcome"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:visibility="gone"
	        android:text="Application outcome:"
	        android:textSize="17sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_detailOutcome"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:visibility="gone"
	        android:textSize="20sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_labelComments"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:visibility="gone"
	        android:text="Comments/notes:"
	        android:textSize="17sp" />
	    
	    <TextView
	        android:id="@+id/educationGraduate_detailComments"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="3dp"
	        android:visibility="gone"
	        android:textSize="20sp" />
	
	</LinearLayout>

</ScrollView>