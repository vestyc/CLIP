<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">

	<LinearLayout
	    android:id="@+id/LinearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.example.clip.health.HealthCheckupEdit" >
	
	    <TextView
	        android:id="@+id/healthCheckup_labelCholHDL"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="HDL - Good Cholesterol (mg/dL)"
	        android:layout_marginTop="20dp" />
	    
	    <NumberPicker
	         android:id="@+id/healthCheckup_pickerCholHDL"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_horizontal" />
	    
	    <TextView
	        android:id="@+id/healthCheckup_labelCholLDL"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="LDL - Bad Cholesterol (mg/dL)"
	        android:layout_marginTop="20dp" />
	    
	    <NumberPicker
	         android:id="@+id/healthCheckup_pickerCholLDL"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_horizontal" />
	    
	    <TextView
	        android:id="@+id/healthCheckup_labelCholTotal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Cholesterol Total (mg/dL)"
	        android:layout_marginTop="20dp" />
	    
	    <NumberPicker
	         android:id="@+id/healthCheckup_pickerCholTotal"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_horizontal" />
	    
	    <TextView
	        android:id="@+id/healthCheckup_labelBP"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Blood Pressure (systolic/diastolic mmHg)"
	        android:layout_marginTop="20dp" />
	    
	    <LinearLayout 
	        android:id="@+id/healthCheckup_layoutBP"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center_horizontal" >	        
	        
	        <NumberPicker
	            android:id="@+id/healthCheckup_pickerBP0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:text="/"
	            android:textSize="120dp" />
	        
	        <NumberPicker
	            android:id="@+id/healthCheckup_pickerBP1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />
	        	        
	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/healthCheckup_labelGlucose"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Glucose (mg/dL)"
	        android:layout_marginTop="20dp" />
	    
	    <NumberPicker
	         android:id="@+id/healthCheckup_pickerGlucose"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center_horizontal" />
	    
	    <Button
	        android:id="@+id/contact_buttonSave"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:layout_gravity="bottom|center_horizontal"
	        android:onClick="saveClicked"
	        android:text="Save" />
	
	</LinearLayout>

</ScrollView>