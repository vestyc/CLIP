<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">

	<LinearLayout 
	    android:id="@+id/LinearLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="com.example.clip.education.EducationFuture" >
	
	    <EditText
	        android:id="@+id/educationFuture_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:ems="10"
	        android:inputType="text"
	        android:hint="Title" >
	        <requestFocus />
	    </EditText>
	    
	    <Spinner
		    android:id="@+id/educationFuture_spinnerType"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp" />
	    
	    <EditText
	        android:id="@+id/educationFuture_school"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:ems="10"
	        android:inputType="text"
	        android:hint="School" />
	    
	    <EditText
	        android:id="@+id/educationFuture_location"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:ems="10"
	        android:inputType="text"
	        android:hint="Location" />
	    
	    <!-- Courses -->
	    
	    <EditText
            android:id="@+id/educationFuture_course0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Course"
            android:inputType="text" />
	    
	    <EditText
            android:id="@+id/educationFuture_course1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:ems="10"
            android:hint="Course"
            android:inputType="text" />
	    
	    <EditText
            android:id="@+id/educationFuture_course2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:ems="10"
            android:hint="Course"
            android:inputType="text" />
	    
	    <EditText
            android:id="@+id/educationFuture_course3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:ems="10"
            android:hint="Course"
            android:inputType="text" />
	    
	    <EditText
            android:id="@+id/educationFuture_course4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:ems="10"
            android:hint="Course"
            android:inputType="text" />
	    
	    <EditText
            android:id="@+id/educationFuture_course5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:ems="10"
            android:hint="Course"
            android:inputType="text" />
	    
        <Button
            android:id="@+id/educationFuture_courseAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:onClick="courseAddClicked"
            android:text="Add Course" />
    
	    <EditText
	        android:id="@+id/educationFuture_comments"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:ems="10"
	        android:inputType="text"
	        android:hint="Comments/notes" />
	    
	    <Button
	        android:id="@+id/educationFuture_buttonSave"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:layout_gravity="bottom|center_horizontal"
	        android:onClick="saveClicked"
	        android:text="Save" />
	
	</LinearLayout>

</ScrollView>